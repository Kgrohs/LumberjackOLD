    <add name="LoggingConnection" connectionString="Data Source=(LocalDb)\v11.0;Initial Catalog=aspnet-LogViewer-20150928092846;Integrated Security=SSPI;AttachDBFilename=|DataDirectory|\aspnet-LogViewer-20150928092846.mdf" providerName="System.Data.SqlClient" />
